<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace, packageName, entityName, tableName, columnNames, primaryKeyConditions, nowDateSqlString, selectColumnNames, insertColumns, insertValues, updateColums -->
<mapper namespace="<%= namespace %> ">

  <!-- <%= tableName %> 상세 조회 -->
  <select id="selectDetail" parameterType="<%= packageName %>.dto.<%= entityName %>DTO" resultType="<%= packageName %>.dto.<%= entityName %>DTO">
    SELECT
        <%= selectColumnNames %>
      FROM <%= tableName %>
     WHERE 1=1 AND <%= primaryKeyConditions %>
  </select>

  <!-- <%= tableName %>  목록 조회 -->
  <select id="selectList" parameterType="<%= packageName %>.dto.<%= entityName %>DTO" resultType="<%= packageName %>.dto.<%= entityName %>DTO">
    SELECT
        <%= selectColumnNames %>
      FROM <%= tableName %>
     WHERE 1=1
  </select>

  <!-- <%= tableName %>  입력 -->
  <insert id="insert" parameterType="<%= packageName %>.dto.<%= entityName %>DTO">
    INSERT INTO <%= tableName %> (<%= insertColumns %>, reg_date, reg_user_key, mod_date, mod_user_key)
                          VALUES (<%= insertValues %>, <%= nowDateSqlString %>, #{regUserKey}, <%= nowDateSqlString %>, #{modUserKey})
  </insert>

  <!-- <%= tableName %>  수정 -->
  <update id="update" parameterType="<%= packageName %>.dto.${Entity}Dto">
    UPDATE <%= tableName %> 
       SET <%= updateColums %>, mod_date = <%= nowDateSqlString %>, mod_user_key = #{modUserKey}
     WHERE <%= primaryKeyConditions %>
  </update>
  
  <!-- <%= tableName %>  삭제 -->
  <delete id="deleteById" parameterType="string">
    DELETE
      FROM <%= tableName %>
     WHERE <%= primaryKeyConditions %>
  </delete>

</mapper>
